#!/usr/bin/env bash
# Usage: surf rails [ssh arguments]

set -e

url=${@:1}

surf remote     $url apt-upgrade
surf remote     $url rails-user "`cat ~/.ssh/id_rsa.pub`"
surf nginx      $url
surf postgresql $url
surf ruby       $url
surf remote     $url apt-install nodejs
surf deploy     $url
surf puma       $url
